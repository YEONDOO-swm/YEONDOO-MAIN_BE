<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.yeondodemo.repository.user.UserMapper">

    <insert id="save">
        insert into USER (username,password, isfirst)
        values (#{saveParam.username}, #{saveParam.password}, #{saveParam.isFirst})
    </insert>
    <update id="update">
        update USER
        set isfirst=#{updateParam.isFirst},
            studyField = #{updateParam.studyField}
        where username = #{updateParam.username}
    </update>
    <select id="clearStore" >
        TRUNCATE TABLE USER
    </select>

    <select id="findByName" resultType="com.example.yeondodemo.entity.User">
        SELECT *
        FROM USER
        WHERE username = #{username}
    </select>
</mapper>